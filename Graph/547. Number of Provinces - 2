// LeetCode Link - https://leetcode.com/problems/number-of-provinces/description


// Solution ---> 

class Solution {
public:

    void DFS(unordered_map<int, vector<int>>& adj, int node, vector<bool>& visited) {
        visited[node] = 1;

        //Visit neighbours

        for(int&v : adj[node]) {
            if(!visited[v]) {
                DFS(adj, v, visited);
            }
        }
    }

    int findCircleNum(vector<vector<int>>& isConnected) {
        int n = isConnected.size();
        vector<bool> visited(n, 0);

        unordered_map<int, vector<int>> adj;

        // Make Graph from Adjasency Matrix
        for(int i = 0; i < n; i++) {
            for(int j = 0; j < n; j++) {
                if(isConnected[i][j] == 1) {
                    adj[i].push_back(j);
                    adj[j].push_back(i);
                }
            }
        }

        int count = 0;
        for(int i = 0; i < n; i++) {
            if(!visited[i]) {
                DFS(adj, i, visited);
                count++;
            }
        }
        
        return count;
    }
};
